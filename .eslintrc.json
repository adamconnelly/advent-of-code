{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "jest"
    ],
    "extends": ["eslint:recommended", "plugin:jest/recommended"],
    "rules": {
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "object-curly-spacing": ["error", "always"],
        "key-spacing": ["error"],
        "comma-spacing": ["error"],
        "semi-spacing": ["error"],
        "space-infix-ops": ["error"],
        "indent": ["error"]
    }
}